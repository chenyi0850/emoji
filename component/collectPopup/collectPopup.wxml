<view class="collectPopup" hidden="{{flag}}">
  <view class='collectPopup-container'>
    <view class="collectPopup-title">收藏</view>
    <checkbox-group bindchange="checkboxChange">
      <label class="checkbox" wx:for="{{collections}}">
        <checkbox value="{{item.id}}" checked="{{item.checked}}"/>{{item.name}}
      </label>
    </checkbox-group>
    <view class="collectPopup-btn">
      <text class="btn-no" bindtap='_error'>{{btn_no}}</text>
      <text class="btn-ok" bindtap='_success'>{{btn_ok}}</text>
    </view>
  </view>
</view>