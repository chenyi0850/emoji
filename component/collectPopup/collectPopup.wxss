.collectPopup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.container {
  position: absolute;
  left: 50%;
  top: 50%;
  height: 600rpx;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 2rpx solid #5F9EA0;
}
.setNewCollect {
  padding: 5rpx 0 5rpx 10rpx;
  color: #5F9EA0;
}
.collectList {
  padding: 5rpx 0 5rpx 10rpx;
}
.checkbox {
  display: flex;
}
.btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 88rpx;
}
.newCollect {
  background: white;
  position: absolute;
  top: 34%;
  left: 100rpx;
  width: 550rpx; 
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
}
.newInput {
  margin: 50rpx 20rpx;
  height: 100rpx;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
}
.newBtn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}
.newBtn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 60rpx;
  border: 2rpx solid #ccc;
  border-radius: 88rpx;
}