#editPhoto{
  height: 100vh;
  width: 100%;
  background: #ccc;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.img{
  display: block;
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
#ipt{
  border: 1rpx rgb(0, 0, 0) solid;
  width: 300px;
  margin:25rpx 0;
  height: 70rpx;
  font-size: 60rpx;
}
#top{
  display: flex;
  flex-direction: column;
  flex:1;
  align-items: center;
  justify-content: center;
}
#mv{
  height: 75rpx;
}
#mv input{
  height: 100%;
  font-size: 75rpx;
}
#bottom{
  border-top: 1rpx rgb(0, 0, 0) solid;
  display: flex;
  width: 100%;
  background: #5F9EA0;
  color: rgb(226, 224, 224);
}
.btn{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 18rpx 0;
  font-size: 25rpx;
}
.btn image{
  width: 40%;
}
#color-area{
  display: flex;
  margin-bottom: 30rpx;
  justify-content: space-around;
}
#hint{
  margin-top: 25rpx;
  color: grey;
}
.color{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}