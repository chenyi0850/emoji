/* pages/user/user.wxss */
#body{
  height: 980rpx;
  background-color: gray;
}
#top {
  font-size: 40rpx;
  color: #fff;
  background: #5F9EA0;
  display: flex;
  height: 100rpx;
  align-items: center;
}
.userimage {
  width: 150rpx;
  height:150rpx;
  border-radius: 50%;
  border: 2px solid #19D1C3;
  overflow: hidden;
  margin: 10rpx;
}
#home {
  width: 355rpx;
  padding-left: 50rpx;
}
#input1{
  width: 300rpx;
  height: 60rpx;
  padding-bottom: 50rpx;
}
#input{
  border-radius: 30rpx;
  width: 250rpx;
  height: 60rpx;
  padding-left: 20rpx;
  background-color: white;
  opacity: 0.5;
}
#search {
  padding-top: 10rpx;
  width: 50rpx;
  margin-left: 10rpx;
}
#name{
  font-size: 40rpx;
  color: #000;
  background-color: white;
  display: flex;
  height: 100rpx;
  align-items: center;
  padding: 100rpx 50rpx;
}
image{
  width:130rpx;
  height: 130rpx;
  border-radius: 300rpx;
  text-align: center;
  line-height: 120rpx;
}
#name1{
  width:330rpx;
  height: 130rpx;
  padding-left: 10rpx;
  line-height: 120rpx;
}
#setting{
  width: 100rpx;
  height: 100rpx;
  padding-left: 100rpx;
}
#list{
  font-size: 40rpx;
  color: #000;
  background-color: white;
  display: flex;
  height: 780rpx;
  padding: 40rpx 0rpx 0rpx 50rpx;
  flex-direction: column;
}
#text{
  line-height: 10rpx;
  padding-top: 35rpx;
  display: flex;
  flex-direction:row;
}
#main{
  width: 600rpx;
  padding-left: 30rpx;
  line-height: 80rpx;
  border-bottom:  1rpx solid #000;
  display: flex;
  position: column;
}
#main1{
  width: 450rpx;
  font-size: 45rpx;
  line-height: 70rpx;
  padding-bottom: 10rpx;
}
#jiantou{
  width: 40rpx;
  height: 40rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  background-color: transparent;
  transform: rotate(45deg);
  margin-left: 50rpx;
  margin-top: 17rpx;
}