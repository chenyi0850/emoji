.main {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.sort-block {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sort-block text {
  display: inline-block;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 700;
}
