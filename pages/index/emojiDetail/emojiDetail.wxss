.top {
  /* font-size: 40rpx; */
  background: #5F9EA0;
  display: flex;
  height: 10vh;
  align-items: center;
  justify-content: center;
}
#searchBox {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background: #fff;
  width: 60%;
  height:60rpx;
}
#search {
  height:60rpx;
  color: #000;
  background: #F8F8F8;
  border: 10rpx solid #fff;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
#image {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: center;
}
#mainEmoji {
  width: 500rpx;
  height: 500rpx;
}
#behaviour {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border: 5rpx solid #5F9EA0;
  height: 150rpx;
}
#behaviour view {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.behaviourImg {
  width: 80rpx;
  height: 80rpx;
}
#emoji{
  margin-top: 10rpx; 
}
.detailImg {
  width: 200rpx;
  height: 200rpx;
  border: 10rpx solid #CDCDCD;
  border-radius: 10rpx;
  margin-left: 23rpx;
}