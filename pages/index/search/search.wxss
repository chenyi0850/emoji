/* pages/index/search/search.wxss */
#search{
  height: 100vh;
}
.input{
  width: 80%;
  height: 80rpx;
  border: 2rpx #5F9EA0 solid;
  font-size: 120%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.title{
  text-align: center;
  width:100%;
  font-size: 44rpx;
  margin:15rpx 0;
}
.hot{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.hot-item{
  border: 4rpx rgb(173, 171, 171) solid;
  margin:10rpx 0;
  display: flex;
  color: white;
  background: #5F9EA0;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 70rpx;
}
#emoji{
  margin-top: 10rpx; 
}
image {
  width: 200rpx;
  height: 200rpx;
  border: 10rpx solid #CDCDCD;
  border-radius: 10rpx;
  margin-left: 23rpx;
}