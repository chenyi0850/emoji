<view class="top">
    <input id="searchBox"></input>
    <view id="search">搜索</view>
</view>
<view id="image">
  <image id="mainImg" src="{{ image.url }}"></image>
</view>
<view id="behaviour">
  <view>
    <image class="behaviourImg" src="/assets/report.png"></image>
    <text class="behaviourText">举报</text>
  </view>
  <view>
    <image class="behaviourImg" src="/assets/collect.png"></image>
    <text class="behaviourText">收藏</text>
  </view>
  <view>
    <image class="behaviourImg" src="/assets/download.png"></image>
    <text class="behaviourText">下载</text>
  </view>
  <view>
    <image class="behaviourImg" src="/assets/share.png"></image>
    <text class="behaviourText">分享</text>
  </view>
</view>
<view>
  <view id="emoji">
    <view>
      <image class="detailImg" wx:for="{{ images }}" wx:for-item="image" src="{{ image.url }}" data-image="{{image}}" bindtap="to_imgDetail"></image>
    </view>
  </view>
</view>